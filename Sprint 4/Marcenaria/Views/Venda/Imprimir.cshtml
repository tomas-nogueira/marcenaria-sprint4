@model Marcenaria.Models.Venda

@{
    Layout = null;
}
<link href="~/css/relatorio3.css" rel="stylesheet" />
<h1 class="relatorio">Relatório da venda</h1>

<div class="container">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VendaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VendaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VendaValor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VendaValor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VendaData)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VendaData)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.ClienteNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vendedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vendedor.VendedorNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pagamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pagamento.PagamentoForma)
        </dd>
    </dl>
    <table>
    <thead>
        <tr>
            <th>
                <h3>Produtos da Venda</h3>
            </th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model.ProdutoList)
            {
                    <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.Produto.ProdutoNome)
                        </td>
                    </tr>
            }
    </tbody>
</table>
</div>

<br />
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>